{
  "name": "hig-react",
  "version": "0.28.8",
  "description": "hig components in react",
  "repository": {
    "type": "git",
    "url": "https://github.com/Autodesk/hig"
  },
  "main": "lib/hig-react.js",
  "css": "lib/hig-react.css",
  "author": "Autodesk Inc.",
  "homepage": "http://hig.autodesk.com",
  "license": "Apache-2.0",
  "peerDependencies": {
    "prop-types": "^15.5.10",
    "react": "^15.4.1",
    "react-dom": "^15.4.1"
  },
  "files": [
    "lib/*.css"
  ],
  "devDependencies": {
    "@types/jest": "^19.2.3",
    "@types/node": "^7.0.21",
    "@types/react": "^15.0.24",
    "babel-core": "^6.26.0",
    "babel-loader": "^7.1.1",
    "babel-plugin-react-docgen": "^1.7.0",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-react": "^6.24.1",
    "babel-preset-stage-2": "^6.24.1",
    "enzyme": "^2.9.1",
    "eslint": "^4.9.0",
    "eslint-config-airbnb": "^15.1.0",
    "eslint-config-prettier": "^2.6.0",
    "eslint-plugin-import": "^2.7.0",
    "eslint-plugin-jsx-a11y": "^5.1.1",
    "eslint-plugin-prettier": "^2.3.1",
    "eslint-plugin-react": "^7.4.0",
    "jest": "^20.0.4",
    "jest-enzyme": "^3.7.0",
    "node-fetch": "^1.7.3",
    "prettier": "^1.7.4",
    "prop-types": "^15.5.10",
    "react": "^15.4.1",
    "react-addons-test-utils": "^15.6.2",
    "react-devtools-core": "^2.0.12",
    "react-dom": "^15.6.1",
    "react-scripts": "1.0.14",
    "react-test-renderer": "^15.6.1",
    "registry-url": "^3.1.0",
    "typescript": "^2.3.2",
    "webpack": "^3.5.5"
  },
  "scripts": {
    "build-playground": "react-scripts build",
    "debug-webpack": "NODE_ENV=development webpack",
    "deploy-playground": "react-scripts build && surge build",
    "generate-docs": "node ./scripts/generate-docs.js",
    "lib": "webpack && NODE_ENV=production webpack",
    "lint": "eslint ./src/** -c ./.eslintrc.js",
    "lint-fix": "eslint ./src/** -c ./.eslintrc.js --fix",
    "playground": "react-scripts start",
    "start": "react-scripts start",
    "test": "react-scripts test --env=jsdom",
    "test-ci": "react-scripts test --env=jsdom --coverage --runInBand && npm run lint",
    "type-check": "tsc",
    "validate": "node ./scripts/validate-version/index.js"
  },
  "dependencies": {
    "hig-vanilla": "^0.1.2"
  },
  "jest": {
    "collectCoverageFrom": [
      "!src/index.js",
      "src/**/*.{js,jsx}",
      "!src/**/*.story.{js,jsx}",
      "!src/fixtures/**/*",
      "!src/stories/**/*",
      "!src/playground/**/*",
      "!**/node_modules/**"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 60,
        "functions": 60,
        "lines": 60,
        "statements": 60
      }
    }
  }
}
