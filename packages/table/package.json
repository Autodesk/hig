{
  "name": "@hig/table",
  "version": "0.3.2",
  "description": "HIG Table",
  "author": "Autodesk Inc.",
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/Autodesk/hig.git"
  },
  "publishConfig": {
    "access": "public"
  },
  "main": "build/index.js",
  "module": "build/index.es.js",
  "style": "build/index.css",
  "files": [
    "build/*"
  ],
  "dependencies": {
    "@hig/themes": "^0.1.3",
    "classnames": "^2.2.3",
    "lodash": "^4.17.5",
    "prop-types": "^15.6.1",
    "react-draggable": "^3.0.5",
    "react-lifecycles-compat": "^3.0.2",
    "react-virtualized": "^9.19.1"
  },
  "peerDependencies": {
    "react": "^15.4.1"
  },
  "devDependencies": {
    "@hig/babel-preset": "^0.1.0",
    "@hig/eslint-config": "^0.1.0",
    "@hig/jest-preset": "^0.1.0",
    "@hig/scripts": "^0.1.2",
    "@hig/semantic-release-config": "^0.1.0",
    "@hig/styles": "^0.1.1",
    "delay": "^2.0.0"
  },
  "scripts": {
    "build": "hig-scripts-build",
    "lint": "hig-scripts-lint",
    "test": "hig-scripts-test",
    "release": "hig-scripts-release"
  },
  "eslintConfig": {
    "extends": "@hig",
    "rules": {
      "class-methods-use-this": 1,
      "import/extensions": 1,
      "jsx-a11y/interactive-supports-focus": 1,
      "jsx-a11y/no-static-element-interactions": 1,
      "max-len": 1,
      "no-param-reassign": 1,
      "no-plusplus": 1,
      "no-shadow": 1,
      "no-unused-expressions": 1,
      "no-unused-vars": 1,
      "react/forbid-prop-types": 1,
      "react/no-unused-prop-types": 1,
      "react/sort-comp": 1
    }
  },
  "jest": {
    "preset": "@hig/jest-preset"
  },
  "release": {
    "extends": "@hig/semantic-release-config"
  },
  "babel": {
    "env": {
      "test": {
        "presets": [
          "@hig/babel-preset/test"
        ]
      }
    }
  }
}
