{
  "name": "@hig/table",
  "version": "0.1.0-alpha",
  "description": "HIG Table",
  "author": "Autodesk Inc.",
  "license": "Apache-2.0",
  "publishConfig": {
    "access": "public"
  },
  "main": "build/index.js",
  "module": "build/index.es.js",
  "style": "build/index.css",
  "files": ["build/*"],
  "dependencies": {
    "classnames": "^2.2.3",
    "lodash": "^4.17.5",
    "react-draggable": "^3.0.5",
    "react-virtualized": "^9.18.5"
  },
  "peerDependencies": {
    "prop-types": "^15.5.10",
    "react": "^15.4.1"
  },
  "devDependencies": {
    "@hig/babel-preset": "0.1.0",
    "@hig/eslint-config": "0.1.0",
    "@hig/scripts": "^0.1.0",
    "@hig/styles": "^0.1.0-alpha"
  },
  "scripts": {
    "build": "hig-scripts-build",
    "lint": "eslint ./src/**/*"
  },
  "eslintConfig": {
    "extends": "@hig",
    "rules": {
      "class-methods-use-this": 1,
      "import/extensions": 1,
      "jsx-a11y/interactive-supports-focus": 1,
      "jsx-a11y/no-static-element-interactions": 1,
      "max-len": 1,
      "no-param-reassign": 1,
      "no-plusplus": 1,
      "no-shadow": 1,
      "no-unused-expressions": 1,
      "no-unused-vars": 1,
      "react/forbid-prop-types": 1,
      "react/no-unused-prop-types": 1,
      "react/sort-comp": 1
    }
  },
  "eslintIgnore": ["*.scss", "*.json"],
  "babel": {
    "env": {
      "test": {
        "presets": ["@hig/babel-preset/test"]
      }
    }
  }
}
